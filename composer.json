{
	"archive": {
		"exclude": [
			"!/build",
			"!/languages",
			"/@mypreview",
			"/src",
			"/vendor/*",
			"node_modules",
			"CONTRIBUTING.md",
			"CODE_OF_CONDUCT.md",
			"babel.config.js",
			"composer.json",
			"composer.lock",
			"package.json",
			"package-lock.json",
			"phpcs.xml.dist",
			"phpstan.neon.dist",
			"README.md",
			"webpack.config.js",
			"/.*"
		]
	},
	"authors": [
		{
			"homepage": "https://www.mahdiyazdani.com",
			"name": "Mahdi Yazdani"
		}
	],
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"description": "This plugin designed with extensibility in mind for data that should be associated with a particular block type but need not have any defined meaning.",
	"homepage": "https://wordpress.org/support/plugin/block-data-attribute",
	"keywords": [
		"WordPress",
		"Plugin"
	],
	"license": "GPL-3.0",
	"name": "mypreview/block-data-attribute",
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "0.7.2",
		"php-parallel-lint/php-parallel-lint": "1.3.2",
		"phpcompatibility/phpcompatibility-wp": "2.1.3",
		"phpunit/phpunit": "9.5.24",
		"squizlabs/php_codesniffer": "3.7.1",
		"wp-cli/i18n-command": "2.4.0",
		"wp-coding-standards/wpcs": "2.3.0"
	},
	"scripts": {
		"lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor --exclude node_modules .",
		"lint:wpcbf": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf --runtime-set testVersion 7.4-",
		"lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --runtime-set testVersion 7.4-",
		"make-pot": "wp i18n make-pot . languages/block-data-attribute.pot --exclude=build"
	},
	"type": "wordpress-plugin"
}
